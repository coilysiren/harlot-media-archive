{% import "_macros" as macros %}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">

<head>
    {% include 'partials/_head' %}
</head>

<body>
<div id='page-body-inner'>

    <div id='page-error-section'>{% block page_error_section %}{% endblock %}</div>

    {% include 'partials/_nav' %}
    {% include 'partials/_search_modal' %}

    <div id='content-top' class="body-flex">
        <div class="container">
            <div class='row'>

                {% include 'partials/_page_shadow' %}

                <div id='header-row'>
                    {% include 'partials/_header' %}
                </div>

                {% block main_block %}
                    <div id="main-column" class='col-sm-6 col-md-8'>
                        <main class='container-fluid'>
                            <div class='row'>
                                {% block main_content %}{% endblock %}
                            </div>
                        </main>
                    </div>

                {% block aside_block %}
                    <div id="sidebar-column" class='col-sm-6 col-md-4'>
                        <aside>
                            {% block aside_content %}
                                {% include 'partials/_support_upper' %}
                                {% include 'partials/_subscribe' %}
                                {% include 'partials/_featured' %}
                                {% include 'partials/_sidebar_ads' %}
                                {% include 'partials/_contributors' %}
                                {% include 'partials/_text_ads' %}
                            {% endblock %}
                        </aside>
                    </div>
                {% endblock %}
                {% endblock %}

            </div>
        </div>
    </div>

    <div id='ripped-border' class="body-flex"><div class="container standard"></div></div>

    <div id='content-bottom' class="body-flex">
        {% include 'partials/_footer' %}
    </div>

    {% include 'partials/_footer_resources' %}

</div>
</body>

</html>
