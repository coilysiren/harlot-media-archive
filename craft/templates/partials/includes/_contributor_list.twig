{% cache for 1 day unless craft.config.devMode %}

{% set users_fulltime = craft.users.relatedTo(craft.categories.slug('fulltime').first()) %}
{% set users_parttime = craft.users.relatedTo(craft.categories.slug('parttime-contract').first()) %}
{% set users_writers = craft.users.relatedTo(craft.categories.slug('writer').first()) %}
{% set staff_lists = [users_fulltime, users_parttime, users_writers] %}

<div class="container-fluid">
    <h2>Contributors</h2>
    <ul class="row">
        {% for users in staff_lists %}
            {% for user in users %}
                <li class="col-xs-3">
                    {% include 'partials/_user_card' %}
                </li>
            {% endfor %}
        {% endfor %}
    </ul>
</div>

{% endcache %}
